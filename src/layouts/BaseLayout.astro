---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import SideBar from "../components/SideBar.astro";

import { SITE_TITLE, SITE_DESCRIPTION } from "../config";

const { image, title = SITE_TITLE, description = SITE_DESCRIPTION, includeSidebar = true, sideBarActiveItemID } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="lofi">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>
  <body>
    <div class="bg-base-100 drawer lg:drawer-open">
      <input id="my-drawer" type="checkbox" class="drawer-toggle" />
      <div class="flex flex-col drawer-content bg-base-100 h-screen">
        <Header title={SITE_TITLE} />
        <div class="ml-6 md:flex mb-auto bg-[radial-gradient(#e5e7eb_0.5px,transparent_1px)] [background-size:16px_16px]">
          <main class="p-6 pt-0 lg:max-w-[900px] max-w-[100vw] w-full h-screen">
            <slot />
          </main>
        </div>
      </div>
      {includeSidebar && <SideBar sideBarActiveItemID={sideBarActiveItemID} />}
    </div>
  </body>
</html>
